<div class="modal fade" data-app-modal="pessoas.modal.dados" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <data-ng-form name="pessoas.form.dados">
                <div class="modal-header">
                    <button type="button" class="close" data-app-modal-dismiss="pessoas.modal.dados"><span>&times;</span></button>
                    <h4 class="modal-title">Cadastrar</h4>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger" data-ng-show="pessoas.modal.erros">
                        <button type="button" class="close" data-ng-click="pessoas.modal.limparMensagens()"><span aria-hidden="true">&times;</span></button>
                        <span data-ng-repeat="erro in pessoas.modal.erros track by $index">
                            <span data-ng-bind="erro"></span><br />
                        </span>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Nome</label>
                                    <input class="form-control"
                                           data-ng-model="pessoas.pessoa.nome"
                                           maxlength="150"
                                           required />
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <div class="form-group">
                                    <label>Data de nascimento</label>
                                    <input class="form-control"
                                           data-app-calendario="99/99/9999"
                                           data-ng-model="pessoas.pessoa.dataNascimento" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-success"
                            data-ng-disabled="pessoas.form.dados.$invalid || pessoas.modal.salvando"
                            data-ng-click="pessoas.modal.salvar()">
                        <span data-ng-show="pessoas.modal.salvando">Salvando&nbsp;<i class="fa fa-refresh fa-spin"></i></span>
                        <span data-ng-hide="pessoas.modal.salvando">Salvar</span>
                    </button>
                    <span>&nbsp;ou</span>
                    <button type="button" class="btn btn-link" data-app-modal-dismiss="pessoas.modal.dados">
                        Fechar
                    </button>
                </div>
            </data-ng-form>
        </div>
    </div>
</div>

